    <StackLayout Padding="20">
        <!-- Upload Button -->
        <Button Text="Upload Excel File" Clicked="OnUploadButtonClicked" TextColor="Black" BackgroundColor="LightGray" />
        
        <!-- Query Input -->
        <Entry x:Name="QueryInput" Placeholder="Enter your query..." TextColor="Black" />

        <!-- Query Button -->
        <Button Text="Ask Question" Clicked="OnQueryButtonClicked" TextColor="Black" BackgroundColor="LightGray" />

        <!-- Query Result -->
        <Label x:Name="QueryResultLabel" FontSize="Medium" TextColor="Black" />
